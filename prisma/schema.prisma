generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  name      String
  password  String
  registros Registro[]
}

model Registro {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  rgCondutor  String
  dataMarcada DateTime
  horaInicio  String?
  horaSaida   String
  destino     String?
  kmIda       Float
  kmVolta     Float
  observacao  String?
  editadoPor  String?
  veiculo     String
  placa       String
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}



